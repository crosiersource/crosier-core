<div class="card">
    <div class="card-header">

        <div class="row">
            <div class="col-8">
                <h3></h3>
            </div>
            <div class="col-4 text-right">
                <button type="button" class="btn btn-primary"
                        onclick="window.location.href='{{ url('bse_pessoaContato_form', {pessoa: e.id}) }}'">
                    <i class="fas fa-file" aria-hidden="true"></i> Novo
                </button>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive-sm">

            <table class="table table-striped table-hover display compact">
                <thead>
                <tr>
                    <th scope="col">Tipo</th>
                    <th scope="col">Contato</th>
                    <th scope="col">Obs</th>
                    <th scope="col"></th>
                </tr>
                </thead>

                <tbody>
                {% for item in e.contatos %}
                    <tr>
                        <td>{{ item.tipo }}</td>
                        <td>{{ item.valor }}</td>
                        <td>{{ item.obs }}</td>
                        <td class="text-right">
                            <button type="button" class="btn btn-primary"
                                    onclick="window.location.href='{{ url('bse_pessoaContato_form', {pessoa: e.id, contato: item.id}) }}'">
                                <i class="fas fa-wrench" aria-hidden="true"></i>
                            </button>

                            <button type="button" class="btn btn-danger"
                                    data-url="{{ url('bse_pessoaContato_delete', {contato: item.id}) }}"
                                    data-token="{{ csrf_token('delete') }}"
                                    data-target="#confirmationModal" data-toggle="modal">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
</div>