{% extends '@CrosierLibBase/index.html.twig' %}




{% block page_content %}


    <div class="container">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Endere√ßo</h3>
                    </div>
                    <div class="col-4 text-right">
                        <button type="button" class="btn btn-secondary"
                                onclick="window.location.href='{{ url('bse_pessoa_form', {id: pessoa.id, '_fragment': 'enderecos'}) }}'">
                            <i class="fas fa-sync" aria-hidden="true"></i> Voltar
                        </button>
                    </div>
                </div>

            </div>

            <div class="card-body">


                {% form_theme formEndereco 'bootstrap_4_horizontal_layout.html.twig' %}

                {{ form_start(formEndereco) }}


                <div class="form-group row">
                    <label class="col-form-label col-sm-2" for="pessoa">Pessoa</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" disabled value="{{ pessoa.nome }}">
                    </div>
                </div>

                {{ form_row(formEndereco._token) }}
                {{ form_row(formEndereco.id) }}

                {{ form_row(formEndereco.tipoEndereco) }}

                {{ form_row(formEndereco.cep) }}

                {{ form_row(formEndereco.logradouro) }}
                {{ form_row(formEndereco.numero) }}
                {{ form_row(formEndereco.complemento) }}
                {{ form_row(formEndereco.bairro) }}
                {{ form_row(formEndereco.cidade) }}
                {{ form_row(formEndereco.estado) }}

                <div class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>
                </div>

                {{ form_end(formEndereco, {'render_rest': true}) }}

            </div>

        </div>
    </div>



{% endblock %}

