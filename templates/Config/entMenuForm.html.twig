{% extends '@CrosierLibBase/index.html.twig' %}


{% block title %}Entrada de Menu{% endblock %}


{% block page_content %}


<div class="card">
	<div class="card-header">

		<div class="row">
			<div class="col-8">
				<h3>Entrada de Menu</h3>
			</div>
			<div class="col-4 text-right">
				<button type="button" class="btn btn-primary"
						onclick="window.location.href='{{ url('cfg_entMenu_form', {'pai' : pai}) }}'">
					<i class="fas fa-file" aria-hidden="true"></i> Novo
				</button>

				<a class="btn btn-secondary"
					href="{{ url('cfg_entMenu_list', {entMenu: pai}) }}">
					<i class="fas fa-sync" aria-hidden="true"></i> Listar
				</a>
			</div>
		</div>

	</div>

	<div class="card-body">

		{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

		{{ form_start(form) }}
		{{ form_widget(form) }}

		<div class="row">
			<div class="col text-right">
				<button type="submit" class="btn btn-primary btn-lg" value="Salvar">
					<i class="fas fa-save" aria-hidden="true"></i> Salvar
				</button>

				<button type="button" value="Resetar" class="btn btn-secondary"
					data-url="{{ url('cfg_entMenu_form') }}"
					data-target="#confirmationModal" data-toggle="modal">
					<i class="fas fa-undo" aria-hidden="true"></i> Recarregar
				</button>
			</div>
		</div>


		{{ form_end(form) }}


	</div>
</div>





{% endblock %}
