{% extends '@CrosierLibBase/index.html.twig' %}


{% block page_content %}


    <div class="card">
        <div class="card-header">

            <div class="row">
                <div class="col-8">
                    <h3>{{ formPageTitle }}</h3>
                </div>
                <div class="col-4 text-right">
                    <button type="button" class="btn btn-secondary"
                            onclick="window.location.href='{{ url(listRoute) }}'">
                        <i class="fas fa-sync" aria-hidden="true"></i> Listar
                    </button>
                </div>
            </div>

        </div>

        <div class="card-body">

            {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

            {{ form_start(form) }}
            {{ form_widget(form) }}


            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Configurações</h5>


                    <table class="table table-striped table-hover display compact">
                        <thead>
                        <tr>
                            <th scope="col">Chave</th>
                            <th scope="col">Valor</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for config in e.configs %}
                            <tr>
                                <td><input type="text" class="form-control" name="appConfigs[{{ config.id }}][chave]"
                                           value="{{ config.chave }}"/></td>
                                <td><input type="text" class="form-control" name="appConfigs[{{ config.id }}][valor]"
                                           value="{{ config.valor }}"/></td>
                                <td class="text-right">
                                    <button type="button" class="btn btn-danger"
                                            data-url="{{ url('cfg_appConfig_delete', {appConfig: config.id}) }}"
                                            data-token="{{ csrf_token('delete') }}"
                                            data-target="#confirmationModal" data-toggle="modal">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td>
                                <input type="text" class="form-control" name="appConfig[chave]"/>
                            </td>
                            <td>
                                <input type="text" class="form-control" name="appConfig[valor]"/>
                            </td>
                            <td class="text-right"></td>
                        </tr>
                        </tbody>
                    </table>


                </div>


            </div>

            <div class="row">
                <div class="col text-right">
                    <button type="submit" class="btn btn-primary" style="width: 200px" value="Salvar">
                        <i class="fas fa-save" aria-hidden="true"></i> Salvar
                    </button>

                    <button type="button" value="Resetar" class="btn btn-secondary"
                            data-url="{{ url(formRoute) }}"
                            data-target="#confirmationModal" data-toggle="modal">
                        <i class="fas fa-undo" aria-hidden="true"></i> Recarregar
                    </button>
                </div>
            </div>


            {{ form_end(form) }}


        </div>
    </div>





{% endblock %}

