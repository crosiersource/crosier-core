{% extends '@CrosierLibBase/index.html.twig' %}




{% block page_content %}


    <div class="card">
        <div class="card-header">

            <div class="row">
                <div class="col-8">
                    <h3>Entradas de Menu ({{ entMenu.label }})</h3>
                </div>
                <div class="col-4 text-right">
                    <button type="button" class="btn btn-primary" id="saveOrdem"
                            data-target="#confirmationModal" data-toggle="modal">
                        <i class="fas fa-save" aria-hidden="true"></i> Salvar
                    </button>

                    <button type="button" class="btn btn-info"
                            onclick="window.location.href='{{ url('cfg_entMenu_form', {'pai' : entMenu.id}) }}'">
                        <i class="far fa-caret-square-right" aria-hidden="true"></i> Nova Ra√≠z
                    </button>

                    <button type="button" class="btn btn-outline-primary"
                            onclick="window.location.href='{{ url('cfg_entMenu_clear', {entMenu: entMenu.id}) }}'">
                        <i class="fas fa-retweet" aria-hidden="true"></i> Recarregar Menu
                    </button>
                    <button type="button" class="btn btn-outline-secondary"
                            onclick="window.location.href='{{ url('cfg_entMenu_listPais') }}'">
                        <i class="fas fa-backward" aria-hidden="true"></i> Listar Menus
                    </button>

                </div>
            </div>

        </div>

        <div class="card-body">


            <div id="simpleList" class="list-group">
                {% for item in dados %}
                    <div class="list-group-item" data-id="{{ item.id }}"
                         style="{{ item.tipo == 'DROPDOWN' ? 'background-color: grey' : '' }} {{ item.tipo == 'TITLE' ? 'background-color: orange' : '' }} {{ item.cssStyle }}">

                        <div class="text-left" style="float:left; {{ item.pai != null ? 'padding: 20px' : '' }}">
                            <i class="{{ item.icon }}"></i>
                            {{ item.label }} {{ (item.tipo == 'DROPDOWN' or item.tipo == 'PAI') ? '<i class="fas fa-caret-left"></i>'|raw : '' }}
                            {% if item.program %}
                                <span style="color: grey">({{ item.program.app.nome }} - {{ item.program.descricao }}
                                    - {{ item.program.url }})</span>
                            {% endif %}

                        </div>

                        <div class="text-right">

                            {% if (item.tipo == 'DROPDOWN' or item.tipo == 'PAI') %}
                            <button type="button" class="btn btn-primary"
                                    onclick="window.location.href='{{ url('cfg_entMenu_form', {'pai' : item.id}) }}'">
                                <i class="fas fa-file" aria-hidden="true"></i> Novo
                            </button>
                            {% endif %}

                            <button type="button" class="btn btn-primary"
                                    onclick="window.location.href='{{ url('cfg_entMenu_form', {'pai' : item.pai.id|default(''), id: item.id}) }}'">
                                <i class="fas fa-wrench" aria-hidden="true"></i>
                            </button>

                            <button type="button" class="btn btn-danger"
                                    data-url="{{ url('cfg_entMenu_delete', {id: item.id}) }}"
                                    data-token="{{ csrf_token('delete') }}"
                                    data-target="#confirmationModal" data-toggle="modal">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        </div>

                    </div>
                {% endfor %}
            </div>


        </div>
    </div>





{% endblock %}


{% block down_scripts %}
    <script src="{{ asset('build/cfg/entMenuList.js') }}"></script>
{% endblock %}