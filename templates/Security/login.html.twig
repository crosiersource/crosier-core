{% extends '@CrosierLibBase/base.html.twig' %}


{% block body %}
    
    <body class="container h-100">

    <div id="preloader"
         style="display: none; position: fixed; left: 0; top: 0; z-index: 1999; width: 100%; height: 100%; overflow: visible; background:rgba(255,255,255,0.5);"></div>


    <div class="container">

        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">

                        <div class="text-center">
                            <div class="mb-4 text-center">
                                <img class="navbar-brand-full ml-4" src="{{ getEnv('CROSIER_LOGO') }}" width="160"
                                     alt="Crosier Logo">
                            </div>
                        </div>
                        <form action="{{ path('login') }}" method="post">
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}">
                            {% if error %}
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    {{ error.messageKey }}
                                </div>
                            {% endif %}
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
										<span class="input-group-text"> <i class="fas fa-user"></i>
										</span>
                                </div>
                                <input type="text" style="text-transform: none;"
                                       class="form-control" placeholder="UsuÃ¡rio" id="username"
                                       name="username" value="{{ username }}">
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
										<span class="input-group-text"> <i class="fas fa-key"></i>
										</span>
                                </div>
                                <input type="password" style="text-transform: none;"
                                       class="form-control" placeholder="Senha" id="password"
                                       name="password">
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-block"><i
                                                class="fas fa-sign-in-alt"></i> Login
                                    </button>
                                </div>
                            </div>
                        </form>
                        <hr>
                        <div class="row">
                            <div class="col-6 text-left">
                                <a class="small" href="/sec/user/recuperaSenha/ini">Esqueci minha senha</a>
                            </div>
                            <div class="col-6 text-right">
                                <img src="{{ asset('build/static/images/CROSIER_fundotransp_400px.png') }}"
                                     style="width: 100px; padding-bottom: 20px" alt="CROSIER"/>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

    </body>
{% endblock %}
