{% extends '@CrosierLibBase/base.html.twig' %}


{% block body %}

<body class="container h-100">

<div id="preloader"
	 style="display: none; position: fixed; left: 0; top: 0; z-index: 1999; width: 100%; height: 100%; overflow: visible; background:rgba(255,255,255,0.5);"></div>


	<div class="container h-100">

		<div class="row align-items-center h-100">
			<div class="col-4 mx-auto">
				<div class="card-group">
					<div class="card p-4">
						<div class="card-body">
							<div class="mb-4 text-center">
							<img src="{{ asset('build/static/images/CROSIER_fundotransp_400px.png') }}" style="width: 200px; padding-bottom: 20px" alt="CROSIER" />
							</div>

							{% if error %}
							<div>
								{{ error.messageKey|trans(error.messageData, 'security') }}
							</div>
							{% endif %}



							<form action="{{ path('login') }}" method="post">
								<input type="hidden" name="_csrf_token"
									value="{{ csrf_token('authenticate') }}">

								<div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text"> <i class="icon-user"></i>
										</span>
									</div>
									<input type="text" style="text-transform: none;"
										class="form-control" placeholder="UsuÃ¡rio" id="username"
										name="username" value="{{ last_username }}">
								</div>
								<div class="input-group mb-4">
									<div class="input-group-prepend">
										<span class="input-group-text"> <i class="icon-lock"></i>
										</span>
									</div>
									<input type="password" style="text-transform: none;"
										class="form-control" placeholder="Senha" id="password"
										name="password">
								</div>
								<div class="mb-4 text-right">
									<input type="checkbox" id="_remember_me" name="_remember_me"
										checked /> <label for="_remember_me"> Mantenha-me
										logado</label>
								</div>

								<div class="row">
									<div class="col-12">
										<button type="submit" class="btn btn-primary btn-block"><i class="fas fa-sign-in-alt"></i> Login</button>
									</div>
								</div>
							</form>



						</div>

					</div>

				</div>
			</div>
		</div>
	</div>

</body>

{% endblock %}