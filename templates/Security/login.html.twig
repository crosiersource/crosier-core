{% extends 'base.html.twig' %}


{% block body %}

<body class="app flex-row align-items-center">

<div id="preloader"
	 style="display: none; position: fixed; left: 0; top: 0; z-index: 1999; width: 100%; height: 100%; overflow: visible; background:rgba(255,255,255,0.5);"></div>


	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-4">
				<div class="card-group">
					<div class="card p-4">
						<div class="card-body">
							<h1>Login</h1>
							{% if error %}
							<div>
								{{ error.messageKey|trans(error.messageData, 'security') }}
							</div>
							{% endif %}



							<form action="{{ path('login') }}" method="post">
								<input type="hidden" name="_csrf_token"
									value="{{ csrf_token('authenticate') }}">

								<p class="text-muted">Informe seus dados</p>
								<div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text"> <i class="icon-user"></i>
										</span>
									</div>
									<input type="text" style="text-transform: none;"
										class="form-control" placeholder="UsuÃ¡rio" id="username"
										name="username" value="{{ last_username }}">
								</div>
								<div class="input-group mb-4">
									<div class="input-group-prepend">
										<span class="input-group-text"> <i class="icon-lock"></i>
										</span>
									</div>
									<input type="password" style="text-transform: none;"
										class="form-control" placeholder="Senha" id="password"
										name="password">
								</div>
								<div class="input-group mb-4">
									<input type="checkbox" id="remember_me" name="remember_me"
										checked /> <label for="remember_me">Mantenha-me
										logado</label>
								</div>

								<div class="row">
									<div class="col-6">
										<button type="submit" class="btn btn-primary px-4">Login</button>
									</div>
									<div class="col-6 text-right">
										<button type="button" class="btn btn-link px-0">Esqueceu sua senha?</button>
									</div>
								</div>
							</form>



						</div>

					</div>

				</div>
			</div>
		</div>
	</div>

</body>

{% endblock %}